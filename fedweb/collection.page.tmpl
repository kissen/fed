{{template "base" .}}

{{define "title"}}
	{{.Selected}}
{{end}}

{{define "body"}}
	{{range .Items}}
		<div class="card">
			{{if eq .type "Person"}}
				{{template "person" .}}
			{{end}}
			{{if eq .type "Note"}}
				{{template "note" .}}
			{{end}}
		</div>
	{{else}}
		<p>Here be dragons.</p>
	{{end}}
{{end}}
