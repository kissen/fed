{{define "flash"}}
	{{range .Context.Flashs}}
		<div class="card">
			<div class="flash">
				<div class="cardmain">
					{{.}}
				</div>
			</div>
		</div>
	{{end}}

	{{range .Context.Warnings}}
		<div class="card">
			<div class="warning">
				<div class="flash">
					<div class="cardmain">
						{{.}}
					</div>
				</div>
			</div>
		</div>
	{{end}}

	{{range .Context.Errors}}
		<div class="card">
			<div class="error">
				<div class="flash">
					<div class="cardmain">
						{{.}}
					</div>
				</div>
			</div>
		</div>
	{{end}}
{{end}}
